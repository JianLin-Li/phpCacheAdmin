<select id="{{ id }}" name="{{ id }}"
        class="select w-full {{ sm ? 'py-1.5 px-3' : 'py-2 px-4' }} focus:ring-{{ color }}-100 focus:border-{{ color }}-300 {{ class }}" aria-label="">
    {% for value, name in options %}
        <option value="{{ value }}"{{ value == selected ? ' selected' : '' }}>{{ name }}</option>
    {% endfor %}
</select>
