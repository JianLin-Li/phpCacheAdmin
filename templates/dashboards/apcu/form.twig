<form method="post">
    <input type="hidden" name="old_key" value="{{ key }}">

    <div class="md:grid md:grid-cols-2 md:gap-2">
        {{ include('components/input.twig', {
            id: 'key',
            label: 'Key',
            value: key,
            required: true,
        }) }}

        {{ include('components/input.twig', {
            id: 'expire',
            label: 'Expire (in seconds)',
            type: 'number',
            help: '0 removes expiration (default).',
            value: expire,
            attr: ' min="0"',
        }) }}
    </div>

    {% if encoders %}
        <div class="mb-3">
            <label for="encoder" class="mb-2 block text-sm font-semibold">Encode function</label>
            {{ include('components/select.twig', {
                id: 'encoder',
                options: encoders,
                class: 'w-full',
                selected: encoder,
            }) }}
        </div>
    {% endif %}

    <div class="mb-3">
        <label for="value" class="mb-2 block text-sm font-semibold">Value</label>
        <textarea id="value" name="value"
                  class="w-full rounded border border-gray-300 bg-white py-1.5 px-3 text-base text-gray-600 placeholder-gray-400
                  focus:outline-none focus:ring focus:ring-{{ color }}-100 focus:border-{{ color }}-300" rows="10" required>{{ value }}</textarea>
    </div>

    {{ include('components/button.twig', {
        text: 'Save key',
        icon: 'save',
        id: 'submit',
        btn_green: true,
        submit: true,
    }) }}
</form>
