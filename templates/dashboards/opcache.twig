<div class="mb-5 lg:flex lg:justify-end">
    <div>
        {{ include('components/button.twig', {
            text: (is_ignored ? 'Show' : 'Ignore') ~ ' scripts from this tool',
            link: ignore_url,
            class: 'mr-1',
        }) }}

        {{ include('components/button.twig', {
            text: 'Reset cache',
            icon: 'reset',
            id: 'delete_all',
            btn_red: true,
        }) }}

        {{ include('components/button.twig', {
            text: 'Delete selected',
            icon: 'trash',
            id: 'delete_selected',
            btn_red: true,
        }) }}
    </div>
</div>

<div class="mb-5 rounded bg-white shadow-sm shadow-gray-300">
    <div class="w-full overflow-x-auto">
        <table class="w-full table-auto text-left">
            <thead>
            <tr class="bg-primary-100 text-primary-900">
                <th class="w-3 rounded-tl px-3 py-2 md:px-5">{{ include('components/checkbox.twig', {disabled: cached_scripts|length == 0, class: 'check-all'}) }}</th>
                <th class="px-3 py-2.5 text-xs font-bold uppercase whitespace-nowrap md:px-5">Filename</th>
                <th class="px-3 py-2.5 text-xs font-bold uppercase whitespace-nowrap md:px-5">Hits</th>
                <th class="px-3 py-2.5 text-xs font-bold uppercase whitespace-nowrap md:px-5">Memory</th>
                <th class="hidden px-3 py-2.5 text-xs font-bold uppercase whitespace-nowrap md:table-cell md:px-5">Last used</th>
                <th class="hidden px-3 py-2.5 text-xs font-bold uppercase whitespace-nowrap md:table-cell md:px-5">Created</th>
                <th class="px-3 py-2.5 text-xs font-bold uppercase whitespace-nowrap md:px-5">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if cached_scripts %}
                {% for script in cached_scripts %}
                    <tr class="[&:last-child>*]:border-b-0" data-key="{{ script.invalidate_url }}">
                        <td class="border-b border-gray-100 px-3 py-2 md:px-5">{{ include('components/checkbox.twig', {class: 'checkbox-key'}) }}</td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm md:px-5" title="{{ script.path }}">{{ script.name }}</td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm md:px-5">{{ script.hits }}</td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm md:px-5">{{ script.memory }}</td>
                        <td class="hidden border-b border-gray-100 px-3 py-2 text-sm md:table-cell md:px-5">{{ script.last_used }}</td>
                        <td class="hidden border-b border-gray-100 px-3 py-2 text-sm md:table-cell md:px-5">{{ script.created }}</td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm md:px-5">
                            <button class="delete-key text-red-500 hover:text-red-700 font-semibold inline-flex items-center" type="button" title="Delete">
                                {{ svg('trash', 16, 'mr-1') }} Delete
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6" class="p-5 text-center">No cached scripts.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>

{{ paginator|raw }}
