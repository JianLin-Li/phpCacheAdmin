<div class="mb-5 lg:grid lg:grid-cols-2 lg:gap-4">
    {% if databases %}
        <div class="mb-5 md:grid md:grid-cols-2 md:gap-2 lg:mb-0">
            <div>
                {{ include('components/select.twig', {id: 'db_select', options: databases, selected: current_db, class: 'mb-3 md:mb-0'}) }}
            </div>

            {% if all_keys != 0 %}
                <div>
                    <div class="flex">
                        <input type="text" id="search_key" value="{{ search_value }}" placeholder="Search key" aria-label="Search key.."
                               class="w-full rounded-l border border-gray-300 bg-white py-1.5 px-3 text-base focus:outline-none focus:ring focus:ring-primary-200 focus:border-primary-300">
                        {{ include('components/button.twig', {
                            text: '',
                            icon: 'search',
                            id: 'submit_search',
                            class: 'rounded-l-none',
                        }) }}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endif %}

    <div class="lg:flex lg:justify-end">
        {{ include('partials/keys_buttons.twig', {
            import_btn: true,
            add_new_btn: true,
        }) }}
    </div>
</div>

{{ include('partials/import_form.twig', {
    expire_default: '-1',
    expire_max: 2147483647,
    key_desc: 'A binary value in a .bin file.',
}) }}

{{ include('partials/keys_table.twig', {
    head_items: [
        {'title': 'Key'},
        {'title': 'Type', 'class': 'w-24 hidden md:table-cell'},
        {'title': 'TTL', 'class': 'w-32'},
    ],
    classes: {
        2: 'hidden md:table-cell',
    },
}) }}
