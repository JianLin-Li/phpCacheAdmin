<div class="mb-5 lg:grid lg:grid-cols-2 lg:gap-4">
    {% if databases %}
        <div class="mb-5 md:grid md:grid-cols-2 md:gap-2 lg:mb-0">
            <div>
                {{ include('components/select.twig', {id: 'db_select', options: databases, selected: current_db, class: 'mb-3 md:mb-0'}) }}
            </div>

            {% if all_keys != 0 %}
                <div>
                    <div class="flex">
                        <input type="text" id="search_key" value="{{ search_value }}" placeholder="Search key"
                               class="w-full rounded-l border border-gray-300 bg-white py-1.5 px-3 text-base text-gray-600 placeholder-gray-400
                           focus:outline-none focus:ring focus:ring-{{ color }}-200 focus:border-{{ color }}-300" aria-label="Search key..">
                        {{ include('components/button.twig', {
                            text: '',
                            icon: 'search',
                            id: 'submit_search',
                            class: 'rounded-l-none',
                        }) }}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endif %}

    <div class="lg:flex lg:justify-end">
        {{ include('partials/keys_buttons.twig') }}
    </div>
</div>

{{ include('partials/import_form.twig', {
    expire_default: '-1',
    expire_max: 2147483647,
    key_desc: 'A binary value in a .bin file.',
}) }}

{{ include('partials/keys_table.twig') }}
