<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ site_title }} - phpCacheAdmin</title>
    <link rel="icon" type="image/png" sizes="32x32" href="assets/favicon.png">
    <link rel="stylesheet" href="assets/css/styles.css?v={{ version }}">
</head>
<body class="bg-gray-50 text-gray-900 md:ml-64" data-dashboard="{{ current }}">
<aside id="sidebar" class="hidden md:block">
    <nav class="bg-{{ color }}-500 fixed top-0 left-0 bottom-0 block w-64 overflow-hidden overflow-y-auto py-4 pt-6 px-6 shadow-xl shadow-gray-500">
        <div class="mx-auto min-h-full w-full px-0 flex flex-col justify-between">
            <div>
                <a class="hidden pb-2 text-white md:block md:pb-5" href="index.php">{{ svg('logo', null) }}</a>
                {% for link, item in nav %}
                    <a class="flex items-center py-2 {{ current == link ? ' font-bold' : '' }} text-white hover:text-gray-200" href="?type={{ link }}">
                        {{ svg(item.icon, 16, 'mr-1' ~ (current == link ? '' : ' opacity-75')) }} {{~ item.title ~}}
                    </a>
                {% endfor %}
            </div>

            <footer class="my-4 text-center text-white">
                {% if logout_url %}
                    <a class="block py-2 text-white hover:text-gray-200" href="{{ logout_url }}">Logout</a>
                {% endif %}

                <div class="font-light">
                    &copy; {{ 'now'|date('Y') }}
                    <a class="font-semibold text-white hover:text-gray-200" href="{{ repo }}" target="_blank" rel="noopener">phpCacheAdmin</a>
                    v{{ version }}

                    {% if git %}
                        <div class="text-xs">
                            Git revision:
                            <a class="font-semibold text-white hover:text-gray-200" href="{{ repo }}/commit/{{ git.commit }}" target="_blank">{{ git.short_sha }}</a>,
                            branch:
                            <a class="font-semibold text-white hover:text-gray-200" href="{{ repo }}/tree/{{ git.branch }}" target="_blank">{{ git.branch }}</a>.
                        </div>
                    {% endif %}
                </div>
            </footer>
        </div>
    </nav>
</aside>
<div class="relative md:ml-0" id="maincontent">
    <header class="md:hidden">
        <div class="container mx-auto px-3 py-3 lg:max-w-7xl">
            <div class="relative flex flex-col justify-between md:flex-row">
                <div class="flex justify-items-stretch">
                    <button class="z-50 block" type="button" id="togglebtn">{{ svg('menu', 20) }}</button>
                    <a class="mx-auto block text-lg font-bold text-gray-900" href="index.php">phpCacheAdmin</a>
                </div>
            </div>
        </div>
    </header>

    <div class="container mx-auto p-3 md:p-7 lg:max-w-7xl">
        <div id="alerts">{{ alerts|raw }}</div>

        {% if back_url %}
            <div class="block">
                <a class="text-lg text-{{ color }}-500 hover:text-{{ color }}-700 font-semibold inline-flex items-center mb-2" href="{{ back_url }}">
                    {{ svg('back', 16, 'mr-1') }} Back
                </a>
            </div>
        {% endif %}

        {{ panels|raw }}
        {{ dashboard|raw }}
    </div>
</div>
<script src="assets/js/scripts.js?v={{ version }}"></script>
</body>
</html>
