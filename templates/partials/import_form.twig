<form method="post" enctype="multipart/form-data" id="import_form" class="hidden">
    <div class="mb-5 rounded bg-white p-3 shadow-sm shadow-gray-300">
        <div class="md:grid md:grid-cols-2 md:gap-2">
            {{ include('components/input.twig', {
                id: 'key_name',
                label: 'Key name',
            }) }}

            {{ include('components/input.twig', {
                id: 'expire',
                label: 'Expire (in seconds)',
                type: 'number',
                help: expire_default ~ ' removes expiration (default).',
                value: expire_default,
                attr: ' min="' ~ expire_default ~ '" max="' ~ expire_max ~ '"',
            }) }}
        </div>

        <div class="mb-3">
            <label for="import" class="mb-2 block text-sm font-semibold">Key</label>
            <input id="import" name="import" type="file"
                   class="block w-full text-sm text-gray-500 file:mr-4 file:rounded file:border-0 file:bg-sky-500 file:py-1.5 file:px-3
                   file:text-sm file:font-semibold file:text-white hover:file:bg-sky-600">
            <small class="text-xs text-gray-500">{{ key_desc }}</small>
        </div>

        {{ include('components/button.twig', {
            text: 'Import',
            icon: 'import',
            id: 'submit_import_key',
            btn_green: true,
            submit: true,
        }) }}
    </div>
</form>
