<div class="infopanel mb-5 rounded bg-white shadow-sm shadow-gray-300"{{ (ajax ? ' data-panel="' ~ key ~ '"' : '')|raw }}>
    <div class="px-4 py-1.5">
        <div class="flex flex-wrap items-center">
            <div class="relative w-full max-w-full flex-1 flex-grow">
                <h2 class="text-{{ color }}-900 text-lg font-semibold">{{ panel_title }}</h2>
            </div>
            {% if selection %}
                <div class="panel-selection relative w-full max-w-full flex-1 flex-grow text-right"{{ (ajax ? ' style="display: none;"' : '')|raw }}>
                    {% if current_server == key %}
                        {{ include('components/badge.twig', {text: 'Selected', bg: 'bg-' ~ color ~ '-500'}) }}
                    {% else %}
                        <a class="text-{{ color }}-500 hover:text-{{ color }}-700 font-semibold" href="?type={{ current }}&server={{ key }}">Select this server</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="w-full overflow-x-auto">
        <table class="w-full table-auto text-left">
            <thead>
            <tr class="bg-{{ color }}-100 text-{{ color }}-900">
                <th class="px-4 py-2 text-xs font-bold uppercase whitespace-nowrap">Name</th>
                <th class="px-4 py-2 text-xs font-bold uppercase whitespace-nowrap">Value</th>
            </tr>
            </thead>
            <tbody class="panel-content">
            {% if array and ajax == false %}
                {% for name, value in array %}
                    {% if value is iterable %}
                        <tr class="bg-{{ color }}-50 text-{{ color }}-900">
                            <td colspan="2" class="px-4 py-2 text-xs font-bold uppercase whitespace-nowrap">{{ name|replace({'_': ' '}) }}</td>
                        </tr>
                        {% for sub_name, sub_value in value %}
                            <tr class="[&:last-child>*]:border-b-0">
                                <td class="border-b border-gray-100 px-4 py-1 text-sm font-semibold whitespace-nowrap">{{ sub_name }}</td>
                                <td class="border-b border-gray-100 px-4 py-1 text-sm">{{ sub_value|raw }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr class="[&:last-child>*]:border-b-0">
                            <td class="border-b border-gray-100 px-4 py-1 text-sm font-semibold whitespace-nowrap">{{ name }}</td>
                            <td class="border-b border-gray-100 px-4 py-1 text-sm">{{ value|raw }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% elseif ajax == false %}
                <tr>
                    <td colspan="2" class="p-5 text-center">No info.</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">{{ svg('loading', null, 'block mx-auto h-20 w-20') }}</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
    {% if moreinfo %}
        <div class="panel-moreinfo border-t px-4 py-1 text-right"{{ (ajax ? ' style="display: none;"' : '')|raw }}>
            <a class="text-{{ color }}-500 hover:text-{{ color }}-700 font-semibold" href="?type={{ current }}&moreinfo={{ key }}">Show more info</a>
        </div>
    {% endif %}
</div>
{{ bottom_content|raw }}
