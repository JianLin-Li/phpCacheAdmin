{% import 'partials/key_type_badge.twig' as key_badge %}

<div class="mb-5 rounded bg-white shadow-sm shadow-gray-300">
    <div class="w-full overflow-x-auto">
        <table class="w-full table-fixed text-left">
            <thead>
            <tr class="bg-primary-100 text-primary-900">
                <th class="w-3 rounded-tl px-3 py-2 md:px-5">{{ include('components/checkbox.twig', {disabled: keys|length == 0, class: 'check-all'}) }}</th>
                <th class="px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:px-5">Key</th>
                <th class="hidden w-24 px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:table-cell md:px-5">Type</th>
                <th class="w-32 px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:px-5">TTL</th>
                <th class="w-24 rounded-tr px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:px-5">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if keys %}
                {% for key in keys %}
                    <tr class="[&:last-child>*]:border-b-0" data-key="{{ key.key }}">
                        <td class="border-b border-gray-100 px-3 py-2 md:px-5">{{ include('components/checkbox.twig', {class: 'checkbox-key'}) }}</td>
                        <td class="truncate border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:px-5">
                            <a class="text-primary-500 hover:text-primary-700 font-semibold" href="{{ view_url|replace({'ttl_value': key.ttl}) ~ key.key }}" title="{{ key.key }}">
                                {{- (key.items_total ? '<span class="hidden md:inline-block">(' ~ key.items_total ~ ' items)&nbsp;</span>' : '')|raw -}}{{- key.key -}}
                            </a>
                        </td>
                        <td class="hidden border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:table-cell md:px-5">{{ key_badge.key_type(key.type) }}</td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:px-5">
                            {% if key.ttl == -1 %}
                                Doesn't expire
                            {% else %}
                                {{ key.ttl }}
                            {% endif %}
                        </td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:px-5">
                            <button class="delete-key text-red-500 hover:text-red-700 font-semibold inline-flex items-center" type="button" title="Delete">
                                {{ svg('trash', 16, 'mr-1') }} Delete
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5" class="p-5 text-center">No keys.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>

{{ paginator|raw }}
