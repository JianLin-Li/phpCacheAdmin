{% import 'partials/key_type_badge.twig' as key_badge %}

<div class="mb-5 rounded bg-white shadow-sm shadow-gray-300">
    <div class="w-full overflow-x-auto">
        <table class="w-full table-fixed text-left">
            <thead>
            <tr class="bg-{{ color }}-100 text-{{ color }}-900">
                <th class="bg-{{ color }}-100 w-3 rounded-tl px-3 py-2 md:px-5">
                    <input type="checkbox"
                           class="check-all checkbox text-{{ color }}-500 -mt-1.5 h-4 w-4 select-none appearance-none rounded border border-gray-300 bg-white align-middle
                           focus:outline-none focus:ring-2 focus:border-{{ color }}-300 focus:ring-{{ color }}-200"
                           aria-label=""{{ keys|length == 0 ? ' disabled' : '' }}>
                </th>
                <th class="px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:px-5">Key</th>
                <th class="hidden w-24 px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:table-cell md:px-5">Type</th>
                <th class="w-32 px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:px-5">TTL</th>
                <th class="w-14 rounded-tr px-3 py-2 text-xs font-bold uppercase whitespace-nowrap md:w-24 md:px-5 lg:w-40">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if keys %}
                {% for key in keys %}
                    <tr class="[&:last-child>*]:border-b-0" data-key="{{ key.key }}">
                        <td class="border-b border-gray-100 px-3 py-2 md:px-5">
                            <input type="checkbox"
                                   class="checkbox-key checkbox text-{{ color }}-500 -mt-1.5 h-4 w-4 select-none appearance-none rounded border border-gray-300 bg-white align-middle
                                   focus:outline-none focus:ring-2 focus:border-{{ color }}-300 focus:ring-{{ color }}-200" aria-label="">
                        </td>
                        <td class="truncate border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:px-5">
                            <a class="text-{{ color }}-500 hover:text-{{ color }}-700 font-semibold" href="{{ view_url|replace({'ttl_value': key.ttl}) ~ key.key }}" title="{{ key.key }}">
                                {{- (key.items_total ? '<span class="hidden md:inline-block">(' ~ key.items_total ~ ' items)&nbsp;</span>' : '')|raw -}}{{- key.key -}}
                            </a>
                        </td>
                        <td class="hidden border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:table-cell md:px-5">{{ key_badge.key_type(key.type) }}</td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:px-5">
                            {% if key.ttl == -1 %}
                                Doesn't expire
                            {% else %}
                                {{ key.ttl }}
                            {% endif %}
                        </td>
                        <td class="border-b border-gray-100 px-3 py-2 text-sm whitespace-nowrap md:px-5">
                            {% set edit_url = edit_url|replace({'ttl_value': key_ttl}) %}
                            <a class="text-gray-500 hover:text-gray-700 font-semibold mr-3 inline-flex items-center" href="{{ edit_url ~ key.key }}" title="Edit">
                                {{ svg('edit', 16) }}<span class="ml-1 hidden lg:inline-block">Edit</span>
                            </a>
                            <button class="delete-key text-red-500 hover:text-red-700 font-semibold inline-flex items-center" type="button" title="Delete">
                                {{ svg('trash', 16) }}<span class="ml-1 hidden lg:inline-block">Delete</span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5" class="p-5 text-center">No keys.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>

{{ paginator|raw }}
