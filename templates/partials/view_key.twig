{% import 'partials/key_type_badge.twig' as key_badge %}

<div class="mb-5 flex items-center gap-2">
    <span>Type {{ key_badge.key_type(type) }}</span>

    {% if ttl %}
        <span>TTL {{ include('components/badge.twig', {text: ttl, pill: true, class: 'uppercase font-bold', bg: 'bg-slate-500'}) }}</span>
    {% endif %}

    {% if decoded == true %}
        {{ include('components/badge.twig', {text: 'Decoded', pill: true, class: 'uppercase font-bold', bg: 'bg-blue-500'}) }}
    {% endif %}

    {% if formatted == true %}
        {{ include('components/badge.twig', {text: 'Formatted', pill: true, class: 'uppercase font-bold', bg: 'bg-blue-500'}) }}
    {% endif %}
</div>

{% if value is iterable %}
    <a href="{{ add_subkey }}" class="text-{{ color }}-500 hover:text-{{ color }}-700 font-semibold inline-flex items-center mb-2">
        {{ svg('open') }} Add another value
    </a>

    {% for item in value %}
        {% if type == 'set' %}
            {% set param_name = 'member' %}
            {% set title = '' %}
        {% elseif type == 'list' %}
            {% set param_name = 'index' %}
            {% set title = 'Index' %}
        {% elseif type == 'zset' %}
            {% set param_name = 'range' %}
            {% set title = 'Score' %}
        {% elseif type == 'hash' %}
            {% set param_name = 'hash_key' %}
            {% set title = 'Key' %}
        {% endif %}

        <div class="bg-white shadow-lg mb-5 rounded">
            <div class="overflow-y-auto flex justify-between border-b px-4 py-1.5">
                <span>
                    {% if type != 'set' %}
                        {{ title }} {{ include('components/badge.twig', {text: item.key, pill: true, class: 'font-bold', bg: 'bg-slate-400'}) }}
                    {% endif %}

                    {% if item.decoded == true %}
                        {{ include('components/badge.twig', {text: 'Decoded', pill: true, class: 'uppercase font-bold', bg: 'bg-blue-500'}) }}
                    {% endif %}

                    {% if item.formatted == true %}
                        {{ include('components/badge.twig', {text: 'Formatted', pill: true, class: 'uppercase font-bold', bg: 'bg-blue-500'}) }}
                    {% endif %}
                </span>

                <div>
                    <a href="{{ edit_url }}&{{ param_name }}={{ item.key }}" class="text-gray-500 hover:text-gray-700 font-semibold mr-3 inline-block mr-3">
                        {{ svg('edit', 13) }} Edit
                    </a>
                    <a href="{{ delete_url }}&{{ param_name }}={{ item.key }}" class="text-red-500 hover:text-red-700 font-semibold inline-block"
                       onclick="return confirm('Are you sure you want to remove this item?');">
                        {{ svg('trash', 13) }} Delete
                    </a>
                </div>
            </div>

            <div class="overflow-y-auto p-4">
                {{ item.value|raw }}
            </div>
        </div>
    {% endfor %}

    {{ paginator|raw }}
{% else %}
    <a href="{{ edit_url }}" class="text-gray-500 hover:text-gray-700 font-semibold mr-3 inline-block mb-3">
        {{ svg('edit', 13) }} Edit
    </a>
    <div class="bg-white shadow-lg rounded">
        <div class="overflow-y-auto p-4">
            {{ value|raw }}
        </div>
    </div>
{% endif %}
